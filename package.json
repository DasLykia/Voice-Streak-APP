{
  "name": "voicestride",
  "version": "1.0.5",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "description": "Voice training and pitch tracking desktop app",
  "author": "Lykia",
  "repository": "https://github.com/DasLykia/Voice-Streak-APP",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "start": "electron .",
    "win:build": "npm run pack:win && npm run make:release",
    "pack:win": "npm run build && electron-builder --dir --config.asar=true",
    "make:release": "vpk pack --packId VoiceStride --packVersion 1.0.5 --packDir Releases/win-unpacked --mainExe VoiceStride.exe --outputDir Releases",
    "releases": "npm run win:build"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.4",
    "date-fns": "^4.1.0",
    "electron-store": "^11.0.2",
    "lucide-react": "^0.562.0",
    "pitchy": "^4.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^2.12.0",
    "velopack": "^0.0.1369-g1d5c984"
  },
  "devDependencies": {
    "@types/canvas-confetti": "^1.6.4",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.voicestride.app",
    "productName": "VoiceStride",
    "publish": {
      "provider": "github"
    },
    "directories": {
      "output": "Releases"
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "build/icon.ico"
    ],
    "win": {
      "target": "dir",
      "icon": "build/icon.ico"
    }
  }
}
